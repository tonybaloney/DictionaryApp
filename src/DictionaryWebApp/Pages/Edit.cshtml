@page
@model DictionaryWebApp.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Dictionary Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DictionaryEntry.Id" />
            <div class="form-group">
                <label asp-for="DictionaryEntry.Word" class="control-label"></label>
                <input asp-for="DictionaryEntry.Word" class="form-control" />
                <span asp-validation-for="DictionaryEntry.Word" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DictionaryEntry.Translation" class="control-label"></label>
                <input asp-for="DictionaryEntry.Translation" class="form-control" />
                <span asp-validation-for="DictionaryEntry.Translation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DictionaryEntry.Language" class="control-label"></label>
                <input asp-for="DictionaryEntry.Language" class="form-control" />
                <span asp-validation-for="DictionaryEntry.Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}